{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es5",
		"strict": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"noImplicitReturns": true,
		"noUnusedParameters": true,
		"outDir": "dist",
		"baseUrl": ".",
		"jsx": "react",
		"declaration": true,
		"declarationDir": "./dist",
		"lib": ["es5", "es6", "dom"],
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "example", "rollup.config.js"]
}
